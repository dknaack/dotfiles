#!/bin/sh

# Default options
alias \
    ls="ls -Fh --color=auto --group-directories-first" \
	diff="diff --color=auto" \
    grep="grep --color=auto" \
	ip="ip -color=auto" \
	gdb="gdb -q" \
    cp="cp -iv" \
    df='df -h' \
    du='du -h' \
    mv="mv -iv" \
    rm="trash"  \
    typst="typst --root=$HOME/.local/share/typst/" \
    minecraft='env DRI_PRIME=1 minecraft-launcher --workDir "$XDG_DATA_HOME/minecraft/"' \
    cfg='git --git-dir=$HOME/.local/share/dotfiles/ --work-tree=$HOME' \

# Shortcuts
alias \
    SS="sudo systemctl" \
    SU="systemctl --user" \
    g="git" \
    gd="git diff" \
    gl="git log" \
    gs="git status" \
    iv=sxiv \
    ka=killall \
    la="ls -a" \
    ll="ls -al" \
    mutt="neomutt" \
    p="paru" \
    sl="ls" \
	se="sudo $EDITOR" \
	e="$EDITOR" \
    z="zathura" \
    py="ipython"
