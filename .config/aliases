#!/bin/sh

# Default options
alias \
    cp="cp -iv" \
    mv="mv -iv" \
    rm="trash"  \
    grep="grep --color=auto" \
    ls="exa -Fh --color=auto --group-directories-first" \
    mkd="mkdir -pv" \
    diff="diff --color=auto" \
    cfg='/usr/bin/git --git-dir=$HOME/.config/dotfiles/ --work-tree=$HOME' \
    df='df -h' \
    du='du -h' \
    minecraft="env DRI_PRIME=1 minecraft-launcher --workDir \"$XDG_DATA_HOME/minecraft\"" \
    wget="wget --hsts-file=$XDG_CACHE_HOME/.wget-hsts" \
	gdb="gdb -q"

# Shortcuts
alias \
    SS="sudo systemctl" \
    SU="systemctl --user" \
    g=git \
    gd="git diff" \
    gl="git log" \
    gs="git status" \
    iv=sxiv \
    ka=killall \
    la="ls -a" \
    ll="ls -al" \
    mutt=neomutt \
    p=paru \
    sl=ls   \
	se="sudo $EDITOR" \
	e="$EDITOR" \
    z=zathura \
    py=ipython
